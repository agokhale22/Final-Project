import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Point;
import java.awt.geom.Ellipse2D;

import javax.swing.JComponent;



public class Bullet extends JComponent
{
	private Ellipse2D.Double ball = new Ellipse2D.Double(0,0,7,7);
	private int dx;
	private int dy;
	private int startingX;
	private int startingY;
	private Point mouse;
	
	public Bullet(int x, int y, Point mouse)
	{
		setSize(new Dimension(16,16));
		setLocation(x,y);
		dx = 0;
		dy = 0;
		this.mouse = mouse;
	}
	
	public void paintComponent(Graphics g)
	{
		Graphics2D g2 = (Graphics2D) g;
		g2.draw(ball);
		g2.setColor(Color.BLACK);
		g2.fill(ball);
	}
	public void setDy(int dy)
	{
		this.dy = dy;
	}
	
	public int getDy()
	{
		return dy;
	}
	
	public int getDx()
	{
		return dx;
	}
	public void setDx(int dx)
	{
		this.dx = dx;
	}
	public void update()
	{
		this.setLocation(this.getX()+dx ,this.getY()  + dy);
	}
	public void shoot()
	{
		if (mouse.getX()>startingX)
			setLocation(getX()+10, getY());
		else
			setLocation(getX()-10, getY());
	}
	
	public boolean collision(JComponent comp)
	{
		return ((comp.getX() < getX() + getWidth()) 
				&& (comp.getY() < getY() + getHeight()) 
				&& (comp.getY() + comp.getHeight() > getY()) 
				&& (comp.getX() + comp.getWidth() > getX()));
	}
}
